{
  "name": "launch-platform-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend API server for Launch Platform",
  "main": "src/server.ts",
  "scripts": {
    "dev": "cross-env NODE_ENV=development node --import tsx/esm src/server.ts",
    "build": "esbuild src/server.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "check": "tsc --noEmit",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "@sendgrid/mail": "^8.1.5",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "cheerio": "^1.1.2",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "date-fns": "^3.6.0",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.39.1",
    "drizzle-zod": "^0.7.0",
    "envalid": "^7.3.0",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "isomorphic-dompurify": "^2.30.0",
    "mammoth": "^1.9.1",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.6",
    "openai": "^5.8.2",
    "ssrf-req-filter": "^1.1.1",
    "stripe": "^18.2.1",
    "ws": "^8.18.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cheerio": "^0.22.35",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cors": "^2.8.19",
    "@types/express": "4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/multer": "^1.4.13",
    "@types/node": "20.16.11",
    "@types/nodemailer": "^7.0.2",
    "@types/ws": "^8.5.13",
    "drizzle-kit": "^0.30.4",
    "esbuild": "^0.25.0",
    "tsx": "^4.19.1",
    "typescript": "5.6.3"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  }
}
